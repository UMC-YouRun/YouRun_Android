<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/rounded_bottom_background"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="@drawable/rounded_bottom_background"
            />

        <TextView
            android:id="@+id/txt_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="14sp"
            android:text="@string/tv_challenge_title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_calendar" />


    </FrameLayout>


    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:src="@drawable/bgd_yellow"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="@id/top_bar"
        android:layout_marginStart="0dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/resultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/tv_crew_challenge1"
            android:textStyle="bold|italic"
            android:textSize="24sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/resultSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tv_crew_challenge5"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/resultCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp" />

        <ImageView
            android:layout_width="68.1dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/img_plus_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_challenge7"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_challenge8"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_marginTop="11dp"
            android:textColor="@color/black"/>


        <ImageButton
            android:id="@+id/startRunningButton"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_margin="22dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn_check"
            android:importantForAccessibility="no"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        layout="@layout/bottom_navigation" />





</androidx.constraintlayout.widget.ConstraintLayout>

