<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="4dp"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/img_reward_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_personal_badge_count_1" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="챌린지 메이트 루시와 함께!"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_goal_title"
        app:layout_constraintStart_toStartOf="@+id/tv_goal_title" />

    <TextView
        android:id="@+id/tv_goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="4일 동안 최대 거리 러닝!"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_reward_count"
        app:layout_constraintStart_toEndOf="@+id/img_reward_count"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_challenge_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/tv_goal_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_goal_title"
        app:srcCompat="@drawable/img_mini2_pacemaker" />

    <ImageView
        android:id="@+id/bg_challenge_creator_hashtags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_description"
        app:srcCompat="@drawable/bg_user_hashtag" />

    <TextView
        android:id="@+id/tv_challenge_creator_hashtags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#열정적 #음악과"
        android:textSize="10sp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_challenge_creator_hashtags"
        app:layout_constraintEnd_toEndOf="@+id/bg_challenge_creator_hashtags"
        app:layout_constraintStart_toStartOf="@+id/bg_challenge_creator_hashtags"
        app:layout_constraintTop_toTopOf="@+id/bg_challenge_creator_hashtags" />

</androidx.constraintlayout.widget.ConstraintLayout>