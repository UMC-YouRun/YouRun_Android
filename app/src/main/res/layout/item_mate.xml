<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mate_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingTop="4dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/idx_challenge_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_semibold"
        android:gravity="center_horizontal"
        android:text="@string/ex_index"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_user_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@string/user_profile"
        android:src="@drawable/img_profile_trailrunner_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/idx_challenge_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_semibold"
        android:text="@string/ex_user_name"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/img_user_profile"
        app:layout_constraintTop_toTopOf="@+id/img_user_profile" />

    <View
        android:id="@+id/bg_runday"
        android:layout_width="46dp"
        android:layout_height="16dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/rounded_corners_day"
        app:layout_constraintBottom_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toEndOf="@+id/user_name"
        app:layout_constraintTop_toTopOf="@+id/user_name" />

    <TextView
        android:id="@+id/user_runday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="@string/user_day"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/bg_runday"
        app:layout_constraintEnd_toEndOf="@+id/bg_runday"
        app:layout_constraintStart_toStartOf="@+id/bg_runday"
        app:layout_constraintTop_toTopOf="@+id/bg_runday" />

    <TextView
        android:id="@+id/user_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/ex_tag"
        android:textSize="11sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/img_user_profile"
        app:layout_constraintStart_toEndOf="@id/img_user_profile"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <ImageView
        android:id="@+id/bg_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_runday"
        app:layout_constraintStart_toEndOf="@+id/bg_runday"
        app:layout_constraintTop_toTopOf="@+id/bg_runday"
        app:srcCompat="@drawable/bg_km_tag" />

    <TextView
        android:id="@+id/user_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="20km"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_km"
        app:layout_constraintEnd_toEndOf="@+id/bg_km"
        app:layout_constraintStart_toStartOf="@+id/bg_km"
        app:layout_constraintTop_toTopOf="@+id/bg_km" />

    <ImageView
        android:id="@+id/bg_mate_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_km"
        app:layout_constraintStart_toEndOf="@+id/bg_km"
        app:layout_constraintTop_toTopOf="@+id/bg_km"
        app:srcCompat="@drawable/bg_change" />

    <TextView
        android:id="@+id/mate_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="+1ìœ„"
        android:textColor="#E75050"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_mate_change"
        app:layout_constraintEnd_toEndOf="@+id/bg_mate_change"
        app:layout_constraintStart_toStartOf="@+id/bg_mate_change"
        app:layout_constraintTop_toTopOf="@+id/bg_mate_change" />

    <ImageButton
        android:id="@+id/btn_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/mate_heart"
        android:src="@drawable/btn_x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_user_profile"
        app:srcCompat="@drawable/img_line" />

</androidx.constraintlayout.widget.ConstraintLayout>