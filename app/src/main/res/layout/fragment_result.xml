<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar_with_back_button" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:src="@drawable/bgd_yellow"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/resultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="러닝 성향 테스트 결과"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/resultSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="디폴트"
            android:textColor="@color/text_color"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/resultCharacter"
            android:layout_width="250dp"
            android:layout_height="375dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bgd_rounded_box"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

        <TextView
            android:id="@+id/resultDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/character_dis"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

        <Button
            android:id="@+id/startRunningButton"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_next"
            android:text="러닝 시작하기"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>
