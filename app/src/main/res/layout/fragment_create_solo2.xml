<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar_with_calendar" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:src="@drawable/bgd_yellow"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="@id/top_bar"
        android:layout_marginStart="0dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/resultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textStyle="bold|italic"
            android:textSize="24sp"
            android:text="@string/tv_solo_challenge1"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/resultSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tv_challenge6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/resultCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="68.1dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/img_plus_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_challenge7"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_challenge8"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_marginTop="11dp"/>


        <ImageButton
            android:id="@+id/startRunningButton"
            android:layout_width="318dp"
            android:layout_height="48dp"
            android:layout_margin="22dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn_check"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

