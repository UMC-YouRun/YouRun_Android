<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_myrun"
    >

    <FrameLayout
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/rounded_bottom_background"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="@drawable/rounded_bottom_background" />


        <TextView
            android:id="@+id/txt_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="14sp"
            android:text="@string/tv_myrun"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_calendar" />
    </FrameLayout>


    <ImageView
        android:id="@+id/iv_profile_character"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="46dp"
        android:src="@drawable/img_face01"
        app:layout_constraintEnd_toEndOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="@+id/top_bar"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <TextView
        android:id="@+id/id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="280dp"
        android:text="@string/tv_nickname"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile_character" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/ic_myrun"
        android:drawablePadding="2dp"
        android:text="@string/tv_nickname1"
        android:textColor="@color/gray"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/id_tv"
        app:layout_constraintTop_toTopOf="@id/id_tv" />

    <EditText
        android:id="@+id/edit_text_nickname"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_edittext_rounded_corner"
        android:importantForAccessibility="no"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/id_tv"
        app:layout_constraintTop_toTopOf="@id/textView3"
        />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="@string/tv_tag1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/id_tv"
        app:layout_constraintTop_toTopOf="@id/id_tv" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/tv_myrun_tag"
        android:textColor="@color/gray"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/textView3"
        app:layout_constraintTop_toTopOf="@id/tv_tag"
        android:drawableStart="@drawable/ic_myrun"
        android:drawablePadding="2dp"/>

    <ImageButton
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/img_change_myrun_btn"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintTop_toTopOf="@id/constraintLayout"
        app:layout_constraintVertical_bias="0.537" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="@id/textView4"
        app:layout_constraintTop_toTopOf="@id/tv_tag">


        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_tag_checkbox_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/tv_check_tag1"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/bg_tag_checkbox_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/tv_check_tag2"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/checkbox1"
            app:layout_constraintTop_toTopOf="@id/checkbox1" />

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/bg_tag_checkbox_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/tv_check_tag3"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/checkbox2"
            app:layout_constraintTop_toTopOf="@id/checkbox1" />

        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_tag_checkbox_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/tv_check_tag4"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkbox1" />

        <CheckBox
            android:id="@+id/checkbox5"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/bg_tag_checkbox_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/tv_check_tag5"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/checkbox4"
            app:layout_constraintTop_toTopOf="@id/checkbox4" />

        <CheckBox
            android:id="@+id/checkbox6"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/bg_tag_checkbox_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/tv_check_tag6"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/checkbox5"
            app:layout_constraintTop_toTopOf="@id/checkbox4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/bottom_navigation" />


</androidx.constraintlayout.widget.ConstraintLayout>

