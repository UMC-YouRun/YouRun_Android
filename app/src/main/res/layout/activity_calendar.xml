<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/runningStatsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/statsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/defalut_date"
                    android:textSize="16sp"
                    android:textColor="#FF9900" />

<!--                <TextView-->
<!--                    android:id="@+id/streak"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="유런과 3일째!"-->
<!--                    android:textSize="14sp"-->
<!--                    android:textColor="#FF9900" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/statsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calendar_text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="16dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFDB78"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="2dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_distance"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거리"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0km"
                        android:layout_marginLeft="140dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="182dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:background="#EEEEEE"
                        android:elevation="2dp"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/timeIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_time"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            android:id="@+id/timeLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/time"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toEndOf="@id/timeIcon"
                            app:layout_constraintTop_toTopOf="@id/timeIcon" />

                        <!-- 실제 수치 -->
                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/defalut_time"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <!-- 페이스 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="182dp"
                        android:layout_weight="1"
                        android:background="#D1C4E9"
                        android:padding="16dp"
                        android:elevation="2dp">

                        <ImageView
                            android:id="@+id/paceIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_pace"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/paceLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pace"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toEndOf="@id/paceIcon"
                            app:layout_constraintTop_toTopOf="@id/paceIcon"
                            android:layout_marginStart="8dp" />

                            <!-- 실제 수치 -->
                            <TextView
                                android:id="@+id/pace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/defalut_pace"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </LinearLayout>


            <!-- 비교 메시지 -->
<!--            <TextView-->
<!--                android:id="@+id/comparisonMessage"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="1월 11일 보다 1km 더 뛰셨네요!"-->
<!--                android:textSize="14sp"-->
<!--                android:gravity="center"-->
<!--                android:textColor="#6200EA"-->
<!--                android:layout_marginTop="16dp" />-->
        </LinearLayout>

        <!-- 달력 UI -->
        <androidx.cardview.widget.CardView
            android:id="@+id/calendarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <!-- 상단 년/월 변경 -->
                <LinearLayout
                    android:id="@+id/monthYearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/prevMonthButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_calendar_left"
                        android:contentDescription="Previous month"
                        android:padding="8dp"
                         />

                    <!-- 현재 년/월 -->
                    <TextView
                        android:id="@+id/monthYearText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="2025년 1월"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/yellow_900"/>

                    <ImageView
                        android:id="@+id/nextMonthButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_calendar_right"
                        android:contentDescription="Next month"
                        android:padding="8dp"
                         />
                </LinearLayout>

                <!-- 요일 -->
                <LinearLayout
                    android:id="@+id/weekdayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="일"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="월"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="화"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="수"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="목"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="금"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="토"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 주간/전체 달력 -->
                <LinearLayout
                    android:id="@+id/dragBarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="0dp"
                    android:layout_marginLeft="-6dp"
                    android:layout_marginTop="0dp">

                    <!-- 주간 달력 -->
                    <GridLayout
                        android:id="@+id/weekCalendarGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:padding="8dp"
                        />

                    <!-- 전체 달력 -->
                    <GridLayout
                        android:id="@+id/fullCalendarGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:padding="8dp"
                        android:rowCount="6"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/dragBar"
                        android:layout_width="80dp"
                        android:layout_height="8dp"
                        android:background="@drawable/ic_drag_bar"
                        android:elevation="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
